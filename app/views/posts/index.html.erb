<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Reviews</h1>

  <% if current_user&.admin? %>
    <div class="mb-4">
      <%= link_to "New review", new_post_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700" %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @posts.each do |post| %>
      <article class="bg-white rounded-lg shadow overflow-hidden">
        <div class="p-5">
          <h2 class="font-bold text-xl mb-2">
            <%= link_to post.title, post, class: "hover:text-indigo-600" %>
          </h2>
          <p class="text-gray-600 text-sm mb-3">
            <p class="text-gray-600 text-sm mb-3">
              <%= truncate(strip_tags(post.content).squish, length: 150) %>
            </p>
          </p>
          <div class="flex justify-between items-center">
            <span class="text-gray-500 text-xs"><%= post.created_at.strftime("%d.%m.%Y") %></span>
            <span class="text-xs"><%= pluralize(post.comments.count, "comment") %></span>
          </div>
        </div>
      </article>
    <% end %>
  </div>

  <%== pagy_nav(@pagy) if defined?(@pagy) %>
</div>