<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="mb-8 text-center">
    <h1 class="text-4xl font-bold bg-gradient-to-r from-purple-600 to-indigo-600 bg-clip-text text-transparent">
      New Review
    </h1>
    <p class="text-gray-600 mt-2">Share your thoughts about anime or manga</p>
  </div>

  <div class="bg-white rounded-xl shadow-lg p-8 border border-gray-100" data-controller="markdown-editor">
    <%= form_with(model: @post, local: true, class: "space-y-6") do |f| %>
      
      <% if @post.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
          <h2 class="font-semibold mb-2"><%= pluralize(@post.errors.count, "error") %> prohibited this review from being saved:</h2>
          <ul class="list-disc list-inside text-sm">
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :title, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-300 focus:border-indigo-500 transition", placeholder: "e.g., Jujutsu Kaisen: Shibuya Arc Review" %>
      </div>

      <div>
        <%= f.label :content, class: "block text-sm font-medium text-gray-700 mb-1" %>
        
        <div class="flex flex-wrap gap-1 bg-gray-50 p-2 border border-gray-300 rounded-t-lg">
          <button type="button" data-action="markdown-editor#apply" data-tag="b" class="px-3 py-1 bg-white border rounded hover:bg-indigo-50 font-bold text-sm">B</button>
          <button type="button" data-action="markdown-editor#apply" data-tag="i" class="px-3 py-1 bg-white border rounded hover:bg-indigo-50 italic text-sm">I</button>
          <button type="button" data-action="markdown-editor#apply" data-tag="h2" class="px-3 py-1 bg-white border rounded hover:bg-indigo-50 font-bold text-sm">H2</button>
          <button type="button" data-action="markdown-editor#apply" data-tag="h3" class="px-3 py-1 bg-white border rounded hover:bg-indigo-50 font-bold text-sm">H3</button>
          <button type="button" data-action="markdown-editor#apply" data-tag="ul" class="px-3 py-1 bg-white border rounded hover:bg-indigo-50 font-bold text-sm">UL</button>
          <button type="button" data-action="markdown-editor#apply" data-tag="ol" class="px-3 py-1 bg-white border rounded hover:bg-indigo-50 font-bold text-sm">OL</button>
          <button type="button" data-action="markdown-editor#apply" data-tag="center" class="px-3 py-1 bg-white border rounded hover:bg-indigo-50 font-bold text-sm">CT</button>
          <button type="button" data-action="markdown-editor#apply" data-tag="blockquote" class="px-3 py-1 bg-white border rounded hover:bg-indigo-50 font-bold text-sm">Q</button>
          <button type="button" data-action="markdown-editor#apply" data-tag="a" class="px-3 py-1 bg-white border rounded hover:bg-indigo-50 text-blue-600 text-sm">Link</button>
        </div>

        <%= f.text_area :content, rows: 12,
            data: { markdown_editor_target: "input" }, 
            class: "w-full px-4 py-3 border border-t-0 border-gray-300 rounded-b-lg focus:ring-2 focus:ring-indigo-300 focus:border-indigo-500 transition font-mono",
            placeholder: "Write your review here..." %>
        <p class="text-xs text-gray-500 mt-1">HTML is supported. Headers will appear in the sidebar.</p>
      </div>

      <div class="flex items-center justify-between pt-4 border-t">
        <%= link_to posts_path, class: "text-gray-600 hover:text-indigo-600 font-medium transition flex items-center" do %>
          <svg class=\"w-4 h-4 mr-1\" fill=\"none\" stroke=\"currentColor\" viewBox=\"0 0 24 24\">
            <path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M10 19l-7-7m0 0l7-7m-7 7h18\"></path>
          </svg>
          Back to reviews
        <% end %>

        <%= f.submit "Create Review", class: "bg-gradient-to-r from-purple-600 to-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-purple-700 hover:to-indigo-700 transition shadow-md" %>
      </div>
    <% end %>
  </div>
</div>