<head>
  <meta name="google-site-verification" content="91MdPG1KiXqZrqsJ_iSF_JTodQZiU5IlFn1nU81tSmU" />
</head>

<div class="relative rounded-xl overflow-hidden h-96 bg-gradient-to-r from-purple-500 to-indigo-600 text-white flex items-center p-12">
  <div class="max-w-2xl">
    <span class="bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-sm font-semibold">Latest Review</span>
    <% if @featured_post %>
      <h1 class="text-4xl font-bold mt-4 mb-3"><%= @featured_post.title %></h1>
      <%= truncate(strip_tags(@featured_post.content), length: 120) %>
      <%= link_to "Read More", post_path(@featured_post), class: "bg-white text-indigo-600 px-6 py-3 rounded-full font-semibold hover:bg-gray-100" %>
    <% else %>
      <h1 class="text-4xl font-bold mt-4 mb-3">Welcome to The Kudo Archive</h1>
      <p class="text-lg mb-6 text-white/90">Our latest reviews will appear here shortly!</p>
      <a href="/posts" class="bg-white text-indigo-600 px-6 py-3 rounded-full font-semibold hover:bg-gray-100">Browse All Reviews</a>
    <% end %>
  </div>
</div>

<section class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-gray-800">Latest Reviews</h2>
    <%= link_to "View all", posts_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <% if @latest_posts&.any? %>
      <% @latest_posts.each do |post| %>
        <article class="post-card bg-white rounded-lg shadow overflow-hidden">
          <% if post.image.attached? %>
            <%= image_tag post.image, class: "w-full h-48 object-cover" %>
          <% else %>
            <img src="https://via.placeholder.com/400x200" alt="Anime" class="w-full h-48 object-cover">
          <% end %>
          <div class="p-5">
            <span class="text-xs font-semibold text-indigo-600 bg-indigo-50 px-2 py-1 rounded-full">ANIME</span>
            <h3 class="font-bold text-xl mt-2 mb-2"><%= post.title %></h3>
            <p class="text-sm text-gray-600 mb-4"><%= truncate(strip_tags(post.content), length: 80) %></p>
            <div class="flex justify-between items-center">
              <span class="text-gray-500 text-xs"><%= post.created_at.strftime("%B %d, %Y") %></span>
              <span class="text-yellow-500 text-sm">â˜… <%= post.rating if post.respond_to?(:rating) %></span>
            </div>
          </div>
        </article>
      <% end %>
    <% end %>
  </div>
</section>

<div class="container mx-auto px-4 py-8 flex flex-col lg:flex-row gap-8">
  <div class="lg:w-2/3">
    <h2 class="text-2xl font-bold mb-6">Recent Activity</h2>
    <div class="space-y-4">
      <% if @anilist_activities.any? %>
        <% @anilist_activities.each do |activity| %>
          <div class="flex items-center bg-white p-4 rounded-lg shadow-sm border border-gray-100">
            <img src="<%= activity.dig('media', 'coverImage', 'medium') %>" class="w-12 h-16 object-cover rounded mr-4" alt="Cover">
            <div class="flex-1">
              <p class="text-sm font-semibold text-gray-800">
                <%= activity['status'].capitalize %> <span class="text-indigo-600"><%= activity.dig('media', 'title', 'romaji') %></span>
              </p>
              <p class="text-xs text-gray-500">
                <%= activity['progress'] ? "Episode #{activity['progress']}" : "Updated list" %> â€¢ <%= time_ago_in_words(Time.at(activity['createdAt'])) %> ago
              </p>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-500 italic">No recent activity found.</p>
      <% end %>
    </div>
  </div>

  <aside class="lg:w-1/3 space-y-8">
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="font-semibold text-lg mb-3 flex items-center"><span class="mr-2">ðŸ“º</span>Currently Watching</h3>
      <% featured = AnimeEntry.find_by(featured_in_sidebar: true) %>
      <% if featured %>
        <ul class="space-y-3">
          <li class="flex items-center">
            <img src="<%= featured.cover_image %>" class="w-10 h-14 object-cover rounded mr-3">
            <div class="flex-1">
              <p class="font-medium"><%= featured.title %></p>
              <p class="text-xs text-gray-500 mb-1"><%= featured.progress %>/<%= featured.episodes || '?' %> eps.</p>
              <% if featured.episodes.present? && featured.episodes > 0 %>
                <% progress_percent = (featured.progress.to_f / featured.episodes * 100).round %>
                <div class="w-full bg-gray-200 rounded-full h-2.5">
                  <div class="bg-indigo-600 h-2.5 rounded-full" style="width: <%= progress_percent %>%;"></div>
                </div>
              <% end %>
            </div>
          </li>
        </ul>
      <% end %>
      <%= link_to "View full listâž¡ï¸", anime_path, class: "text-sm text-indigo-600 hover:underline mt-3 inline-block" %>    
    </div>

    <div class="bg-indigo-50 rounded-lg p-6">
      <h3 class="font-semibold text-lg mb-2">ðŸ“¬ Newsletter</h3>
      <p class="text-sm text-gray-700 mb-4">Get notified when I post new reviews!</p>
      <%= form_with url: subscribers_path, local: true, class: "flex flex-col space-y-2" do |f| %>
        <%= f.email_field :email, placeholder: "Your email", required: true, class: "px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-300 w-full" %>
        <%= f.submit "Subscribe", class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition w-full" %>
      <% end %>
    </div>
  </aside>
</div>
