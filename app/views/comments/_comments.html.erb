<div class="bg-white rounded-lg shadow-sm border border-gray-100 p-5 mb-4 hover:shadow-md transition">
	<div class="flex items-start justify-between">
		<!--Username-->
		<div class="flex items-center space-x-3">
			<div class="w-8 h-8 rounded-full bg-gardient-to-br from-purple-500 to-indigo-600 flex items-center justify-center text-white font-bold text-sm">
				<%= comment.user.username.first.upcase %>
			</div>
			<div>
				<span class="font-semibold text-gray-800"><%= comment.user.username %></span>
				<span class="text-xs text-gray-500 ml-2">
					<%= time_ago_in_words(comment.created_at) %> ago
				</span>
			</div>
		</div>
		
		<!--Delete Button-->
		<% if current_user&.admin? %>
			<%= button_to "Delete", [comment.post, comment], method: :delete,
				class: "text-xs text-red-500 hover.text-red-700 transition",
				data: {confirm: "Are you sure?"} %>
		<% end %>
	</div>

	<!--Comment-->
	<div class="mt-3 pl-11 text-gray-700">
		<%= simple_format(comment.content, class: "text-sm leading-relaxed") %>
	</div>
</div>					
